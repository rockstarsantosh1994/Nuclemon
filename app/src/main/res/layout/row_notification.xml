<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:elevation="@dimen/margin10"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/margin20"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10ssp"
        android:layout_marginRight="@dimen/_10ssp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginBottom="@dimen/_10sdp">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/notification_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/tv_notification_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SERVICE XYZ IS DOWN"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wed, Oct 27th, 04:00 PM"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10ssp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin30"
                        android:id="@+id/btn_sendemail"
                        android:text="@string/send_email"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:background="@drawable/my_gradient_drawable"
                        android:textColor="@color/white"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin30"
                        android:id="@+id/btn_sendsms"
                        android:layout_marginLeft="@dimen/_10ssp"
                        android:text="@string/send_sms"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:background="@drawable/my_gradient_drawable"
                        android:textColor="@color/white"/>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>